{
  "manifest_version": 3,
  "name": "Hindi Language Learner",
  "version": "2.0.0",
  "description": "Learn Hindi using spaced repetition and text-to-speech pronunciation",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Hindi Language Learner"
  },
  "options_page": "src/options/options.html",
  "web_accessible_resources": [
    {
      "resources": ["assets/*.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}